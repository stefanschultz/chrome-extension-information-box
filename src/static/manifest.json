{
    "manifest_version": 3,
    "name": "Werkzeugbox",
    "description": "The extension Werkzeugbox is a small tool that helps you to get displayed useful information and use small tools in your Browser.",
    "version": "1.0.1",
    "action": {
        "default_title": "Werkzeugbox",
        "default_icon": "icon.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.bundle.js"
    }
}
